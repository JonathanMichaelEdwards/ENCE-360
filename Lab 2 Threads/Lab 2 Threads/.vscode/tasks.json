{
    "tasks": [
        {
            "type": "shell",
            "label": "clang-4.0 build active file",
            "command": "/usr/bin/clang-4.0",
            "args": [
                "-g",
                "-Wall -lrt -lm -g --std=c99",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lpthread"
            ],
            "options": {
                "cwd": "/usr/bin"
            }
        }
    ],
    "version": "2.0.0"
}